{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    ':semanticCommits',
    ':automergeBranch',
    ':timezone(Europe/Warsaw)',
    ':prHourlyLimitNone',
    'docker:enableMajor',
    'helpers:pinGitHubActionDigests',
  ],
  dependencyDashboardTitle: 'Renovate Dashboard ðŸ¤–',
  flux: {
    managerFilePatterns: [
      '/^apps\/.+\.ya?ml$/',
      '/^infra\/.+\.ya?ml$/',
      '/^cluster\/.+\.ya?ml$/',
    ],
  },
  customManagers: [
    {
      customType: 'regex',
      description: 'Track Kind node images referenced by cluster/config/cluster-config.yaml',
      managerFilePatterns: [
        '/^cluster\/config\/cluster-config\.yaml$/',
      ],
      matchStrings: [
        'image:\s*(?<depName>kindest/node):(?<currentValue>[0-9A-Za-z_.\-]+)',
      ],
      datasourceTemplate: 'docker',
    },
    {
      customType: 'regex',
      description: 'Track all inline container images across apps/, infra/, and cluster/ manifests',
      managerFilePatterns: [
        '/^apps/.+\.ya?ml$/',
        '/^infra/.+\.ya?ml$/',
        '/^cluster/.+\.ya?ml$/',
      ],
      matchStrings: [
        'repository:\s*(?<depName>[A-Za-z0-9_.\-]+(?:/[A-Za-z0-9_.\-]+)*)\s*\n\s*tag:\s*(?<currentValue>[A-Za-z0-9_.\-]+)',
        'image:\s*(?<depName>[A-Za-z0-9_.\-]+(?:/[A-Za-z0-9_.\-]+)*):(?<currentValue>[A-Za-z0-9_.\-]+)',
      ],
      datasourceTemplate: 'docker',
    },
    {
      customType: 'regex',
      description: 'Track oci:// artifact references (Helm charts, templates, bundles)',
      managerFilePatterns: [
        '/^apps/.+\.ya?ml$/',
        '/^infra/.+\.ya?ml$/',
        '/^cluster/.+\.ya?ml$/',
      ],
      matchStrings: [
        'oci://(?<depName>[^:]+):(?<currentValue>[^\s]+)',
      ],
      datasourceTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      description: 'Auto-merge all non-major dependency updates',
      automerge: true,
      automergeType: 'branch',
      matchUpdateTypes: [
        'minor',
        'patch',
        'digest',
        'pin',
        'rollback',
      ],
      ignoreTests: true,
    },
    {
      description: 'Require manual review for major upgrades',
      automerge: false,
      matchUpdateTypes: [
        'major',
      ],
      addLabels: [
        'renovate/manual-review',
      ],
    },
    {
      description: 'Treat Kind node tags as loose versions',
      matchDatasources: [
        'docker',
      ],
      matchPackageNames: [
        'kindest/node',
      ],
      versioning: 'loose',
    },
    {
      description: 'Group Kind cluster node updates into a single PR',
      matchFileNames: [
        'cluster/config/cluster-config.yaml',
      ],
      groupName: 'kind-nodes',
    },
    {
      description: 'Only consider semver Jellyfin tags',
      matchPackageNames: [
        'lscr.io/linuxserver/jellyfin',
      ],
      allowedVersions: '/^(?:[0-9]|[1-9][0-9])\.\d+\.\d+$/',
    },
  ],
}
