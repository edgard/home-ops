apiVersion: v1
stringData:
    SECRET_CLOUDFLARE_TOKEN: {{ cloudflare_token }}
    SECRET_EMAIL: {{ email }}
    SECRET_PRIVATE_DOMAIN: {{ private_domain }}
    SECRET_PUBLIC_DOMAIN: {{ public_domain }}
    SECRET_TIMEZONE: {{ timezone }}
    SECRET_RESTIC_REPO: {{ restic_repo }}
    SECRET_RESTIC_REPO_PASS: {{ restic_repo_pass }}
kind: Secret
metadata:
    annotations:
        reflector.v1.k8s.emberstack.com/reflection-allowed: "true"
        reflector.v1.k8s.emberstack.com/reflection-allowed-namespaces: kube-system
        reflector.v1.k8s.emberstack.com/reflection-auto-enabled: "true"
        reflector.v1.k8s.emberstack.com/reflection-auto-namespaces: kube-system
    name: cluster-secrets
type: Opaque
